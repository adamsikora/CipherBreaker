<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cz.civilizacehra.cipherbreaker.PrincipTrainerActivity">

    <LinearLayout
        android:id="@+id/principleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/mImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/bImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/sImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/binImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/tImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/principleLayout"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:padding="10dp"
        android:src="@android:drawable/alert_light_frame" />

    <LinearLayout
        android:id="@+id/invertLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/answerLayout"
        android:layout_below="@+id/principleLayout"
        android:layout_centerInParent="false"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invert"
            android:textAlignment="center" />

        <Switch
            android:id="@+id/invertSwitch"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/solutionView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp">

        <ImageView
            android:id="@+id/solution1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/solution2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/solution3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/solution4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

        <ImageView
            android:id="@+id/solution5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@android:drawable/alert_light_frame" />

    </LinearLayout>

    <TextView
        android:id="@+id/solutionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/solutionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="Solution" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="Next" />
    </LinearLayout>

</RelativeLayout>
