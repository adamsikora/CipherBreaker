<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="cube_style">
        <item name="android:layout_width">@dimen/cube_size</item>
        <item name="android:layout_height">@dimen/cube_size</item>
        <item name="android:src">@android:drawable/ic_menu_help</item>
    </style>

    <style name="result_style">
        <item name="android:layout_width">@dimen/cube_size</item>
        <item name="android:layout_height">@dimen/cube_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginLeft">1sp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="result_type_style">
        <item name="android:layout_width">@dimen/cube_size_p1</item>
        <item name="android:layout_height">@dimen/half_cube_size</item>
    </style>

    <style name="ternary_result_type_style">
        <item name="android:layout_width">@dimen/cube_size_p1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="azimuther_text_input_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">true</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="item_with_description_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="strict_item_with_description_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="description_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
